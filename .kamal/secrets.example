# Kamal Secrets Configuration
# Copy this file to .kamal/secrets and fill in your actual values
# NEVER commit the actual secrets file to version control

# Rails Master Key (from config/master.key)
# This key encrypts your Rails credentials and secrets
# Find it in: config/master.key (created when you run 'rails new')
RAILS_MASTER_KEY=your_rails_master_key_here

# Docker Registry Password
# For Docker Hub: Use access token (not password) from hub.docker.com
# For ECR: This will be automatically managed by Kamal
KAMAL_REGISTRY_PASSWORD=your_registry_password_here

# Optional: Database URL if using external database
# DATABASE_URL=postgresql://user:password@host:port/database

# Optional: Redis URL if using external Redis
# REDIS_URL=redis://user:password@host:port/database